@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.Localization
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <li>
        <a href="#">Account</a>
        <ul>
            <li><a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Manage account</a></li>
            <li>
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="nav-link2 btn btn-link loadingButton">Logout</button>
                </form>
            </li>
        </ul>
    </li>
    <li class="nav-item">

    </li>
    <li class="nav-item">

    </li>
}
else
{
    <li>
        <a asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="/Wallet">Login</a>
    </li>
}
